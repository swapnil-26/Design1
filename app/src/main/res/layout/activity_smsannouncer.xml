<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#efefef">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SMSAnnouncer">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="0dp"
            android:layout_above="@+id/card_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3cba54"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="SMS SETTINGS"
            android:textSize="35sp"


            android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tVSpeechRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"


            android:text="Set Speech Rate" />

        <SeekBar
            android:id="@+id/sBSpeechRate"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tVPitchRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/sBSpeechRate"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/sBSpeechRate"
            android:layout_below="@+id/sBSpeechRate"
            android:layout_marginTop="11dp"
            android:text="Set Pitch" />
        <SeekBar
            android:id="@+id/sBPitchRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/tVVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/sBPitchRate"
            android:layout_alignStart="@+id/sBPitchRate"
            android:layout_below="@+id/sBPitchRate"
            android:layout_marginTop="8dp"
            android:text="Set Volume" />
        <SeekBar
            android:id="@+id/sBVolume"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen to an Example"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            card_view:cardCornerRadius="0dp"
            android:layout_above="@+id/card_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3cba54"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="OK"
                android:textStyle="bold"

                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
    </RelativeLayout>


